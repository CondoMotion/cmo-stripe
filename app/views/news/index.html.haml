= render "layouts/dashboard_navigation"

#main.no-nav-secondary
  #breadcrumbs 
    .container-fluid
      .row-fluid
        .span12
          %h3.pull-left 
            %i.icon-bullhorn
            News
          = link_to "Add news", new_news_path, class: "btn btn-success pull-right" 
          /if can? :create, Site
  .container-fluid
    .row-fluid{style: "padding-top: 20px;"}
      .span12
        %table.table
          %thead
            %tr
              %th Title
              %th Properties
              %th Roles
              %th Posted by
              %th{style: "text-align: right;"} Actions
          %tbody
          - @news.each do |news|
            %tr
              %td= link_to news.post.title, news
              %td= news.post.sites.map(&:name).join(", ")
              %td= news.post.roles.map(&:name).join(", ")
              %td= news.post.user.email if news.post.user
              %td{style: "text-align: right;"}
                .btn-group
                  = link_to raw("<i class='icon-pencil'></i>"), edit_news_path(news), class: "btn btn-small"
                  = link_to raw("<i class='icon-trash'></i>"), news, class: "btn btn-small", method: :delete, confirm: "Are you sure?"