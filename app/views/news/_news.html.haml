- if params[:site].nil? || news.post.site_ids.include?(params[:site].to_i)
  .news_post
    %h1
      = link_to news.post.title, news
      .btn-group.pull-right
        = link_to raw("<i class='icon-pencil'></i>"), edit_news_path(news), class: "btn btn-small"
        .btn.btn-small{ data: { toggle: "collapse", target: "#permissions-#{news.post.id}" } }
          %i.icon-lock
        = link_to raw("<i class='icon-trash'></i>"), news, method: :delete, confirm: "Are you sure?", class: "btn btn-small"
    .content
      .collapse{id: "permissions-#{news.post.id}"}
        .permissions
          - news.post.roles.each do |role|
            %span.label.label-info= role.name.titleize
      .news-sites
        - news.post.sites.each do |site|
          %span.label.label-info= site.name
      %p= raw news.content
    .footer
      Posted 
      = time_ago_in_words news.post.created_at
      ago by 
      = news.post.user.email