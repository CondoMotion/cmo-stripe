= render "layouts/dashboard_navigation"

#main.no-nav-secondary
  #breadcrumbs 
    .container-fluid
      .row-fluid
        .span12
          %h3.pull-left 
            %i.icon-map-marker
            Properties 
          = link_to "Add property", new_site_path, class: "btn btn-success pull-right" if can? :create, Site
  .container-fluid
    .row-fluid{style: "padding-top: 20px;"}
      .span12
        %table.table
          %thead
            %tr
              %th Name
              %th Address
              %th{style: "text-align: right;"} Actions
          %tbody
          - current_user.member_sites.each do |site|
            %tr
              %td= link_to site.name, root_url(subdomain: site.subdomain)
              - unless site.address.nil?
                %td
                  = site.address.address1
                  = site.address.address2
                  = "#{site.address.city}, "
                  = site.address.state
                  = site.address.zip
              %td{style: "text-align: right;"}
                .btn-group
                  - if can? :edit, site
                    = link_to raw("<i class='icon-pencil'></i>"), edit_site_url(subdomain: site.subdomain), class: "btn btn-small"
                  - if can? :delete, site
                    = link_to raw("<i class='icon-trash'></i>"), site, class: "btn btn-small", method: :delete, confirm: "Are you sure?"