=render "layouts/navigation"
.container
  %h2.title Sites

  %table.table
    %thead
      %tr
        %th Name
        %th Subdomain
        %th Layout
        %th Company
        %th
        %th
    %tbody
    - @sites.each do |site|
      %tr
        %td= link_to site.name, root_url(subdomain: site.subdomain)
        %td= site.subdomain
        %td= site.layout
        %td= site.company.name
        %td= link_to 'Edit', edit_site_path(site) if can? :edit, site
        %td= link_to 'Destroy', site, :method => :delete, :data => { :confirm => 'Are you sure?' } if can? :destroy, site
  = link_to 'New Site', new_site_path
