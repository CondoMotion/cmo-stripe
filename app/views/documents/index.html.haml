- content_for :nav_secondary do
  #nav-secondary
    %h5 Filter by Property
    %ul.nav-secondary-tabs
      %li{class: (params[:site].nil? ? "active" : "")}= link_to "All", documents_url
      - @sites.each do |site|
        %li{class: (params[:site] == site.id.to_s ? "active" : "inactive")}= link_to site.name, documents_url(site: site.id)

= render "layouts/dashboard_navigation"

#main
  #breadcrumbs 
    .container-fluid
      .row-fluid
        .span12
          %h3.pull-left 
            %i.icon-file-alt
            Documents 
          = link_to "Add document", new_document_path, class: "btn btn-success pull-right" 
          /if can? :create, Site
  .container-fluid
    .row-fluid{style: "padding-top: 20px;"}
      .span12
        %table.table
          %thead
            %tr
              %th Title
              %th Properties
              %th Roles
              %th Posted by
              %th{style: "text-align: right;"} Actions
          %tbody
          - @documents.each do |document|
            %tr
              %td= link_to document.post.title, document.attachment.attachment.url if (!document.attachment.nil? && document.attachment.attachment?)
              %td= document.post.sites.map(&:name).join(", ")
              %td= document.post.roles.map{|role| role.name.titleize }.join(", ")
              %td= document.post.user.email if document.post.user
              %td{style: "text-align: right;"}
                .btn-group
                  = link_to raw("<i class='icon-pencil'></i>"), edit_document_path(document), class: "btn btn-small"
                  = link_to raw("<i class='icon-trash'></i>"), document, class: "btn btn-small", method: :delete, confirm: "Are you sure?"
